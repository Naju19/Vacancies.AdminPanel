@page "/{vacancyId:int}/{userId:int}/applicants"

@model ApplicantsDetailResultModel


<div class="dashboard-page-one">
    <div class="dashboard-content-one">
        <div class="breadcrumbs-area">
            <h3>Applicants</h3>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li>Details of Applicants</li>
            </ul>
        </div>
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>About Applicant</h3>
                    </div>
                </div>
                <div class="single-info-details">
                    <div class="item-img">
                        <img src="img/figure/applicant1.jpg" alt="Applicant">
                    </div>
                    <div class="item-content">
                        <div class="header-inline item-header">
                            <h3 class="text-dark-medium font-medium">@Model.ApplicantResult.Color</h3>

                        </div>

                        <div class="info-table table-responsive">
                            <table class="table text-nowrap">
                                <tbody>
                                    @foreach (var questionAnswer in Model.ApplicantResult.Answers)
                                    {
                                        <tr>
                                            <td>@questionAnswer.QuestionText</td>
                                            <td class="font-medium text-dark-medium">Answered: @questionAnswer.AnsweredOption</td>
                                            <td class="font-medium text-dark-medium">Is Correct :@questionAnswer.IsCorrect</td>
                                            <td class="font-medium text-dark-medium">Seconds :@questionAnswer.Seconds</td>
                                        </tr>
                                    }

                                    <tr>
                                        <td>Total Score:</td>
                                        <td class="font-medium text-dark-medium">@Model.ApplicantResult.Score</td>
                                    </tr>
                                    <tr>
                                        <td>Total Percent:</td>
                                        <td class="font-medium text-dark-medium">@Model.ApplicantResult.Percentage</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


